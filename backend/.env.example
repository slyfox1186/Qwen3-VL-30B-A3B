# VLM Chat API Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=vlm-chat-api
HOST=0.0.0.0
PORT=8080
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# vLLM Configuration
# =============================================================================
VLLM_BASE_URL=http://localhost:8000/v1
VLLM_API_KEY=EMPTY
VLLM_MODEL=cpatonn/Qwen3-VL-30B-A3B-Instruct-AWQ-4bit
VLLM_MAX_TOKENS=4096
VLLM_TIMEOUT=120.0

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_DATA_DIR=./data/redis
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5.0

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# Session Management
# =============================================================================
SESSION_TTL_SECONDS=86400
MAX_HISTORY_MESSAGES=50

# =============================================================================
# Request Queue
# =============================================================================
QUEUE_STREAM_NAME=llm_requests
QUEUE_CONSUMER_GROUP=llm_workers
QUEUE_MAX_RETRIES=3

# =============================================================================
# Image Processing
# =============================================================================
MAX_IMAGE_SIZE_MB=10
MAX_IMAGES_PER_MESSAGE=4
ALLOWED_IMAGE_FORMATS=jpeg,jpg,png,gif,webp

# =============================================================================
# Web Access / SerpApi
# =============================================================================
SERPAPI_API_KEY=

# =============================================================================
# CORS (comma-separated origins)
# =============================================================================
CORS_ORIGINS=http://localhost:3000
