# Qwen3-VL Chat Application Configuration

# vLLM Configuration
# VLLM_MODEL=cpatonn/Qwen3-Omni-30B-A3B-Instruct-AWQ-4bit
# VLLM_MODEL=cpatonn/Qwen3-VL-30B-A3B-Instruct-AWQ-4bit
VLLM_MODEL=cpatonn/Qwen3-VL-30B-A3B-Thinking-AWQ-4bit
VLLM_HOST=127.0.0.1
VLLM_PORT=8000
VLLM_GPU_MEM_UTILIZATION=0.95
VLLM_MAX_MODEL_LEN=26000
VLLM_MAX_NUM_SEQS=1
VLLM_DTYPE=float16
VLLM_QUANTIZATION=compressed-tensors

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8080

# Frontend Configuration
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_DATA_DIR=./data/redis

# Session Configuration
SESSION_TTL_SECONDS=86400
MAX_HISTORY_MESSAGES=50

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW_SECONDS=60

# Image Configuration
MAX_IMAGE_SIZE_MB=20
MAX_IMAGES_PER_MESSAGE=6

# SerpApi Configuration (get your key at https://serpapi.com)
SERPAPI_API_KEY=your_serpapi_api_key_here

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000
